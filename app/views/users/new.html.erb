<div class="container jumbotron" id="sign-upstyle">
<div class="row justify-content-center">
<h2 style = "margin-bottom: 10px;">Sign Up</h2>
</div>
<div class="row justify-content-center">
<%= form_for @user do |f|%>
  <%= f.label :name%><br>
  <%= f.text_field :name%><br>
  <%= f.label :username%><br>
  <%= f.text_field :username%><br>
  <%= f.label :email%><br>
  <%= f.text_field :email%><br>
  <%= f.label :password%><br>
  <%= f.password_field :password%><br><br>
  <%= f.submit %>
<%end%>
</div>



